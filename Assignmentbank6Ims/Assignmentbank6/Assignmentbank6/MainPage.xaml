<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignmentbank6.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">


            <Label Text="FNB " HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name=" DepositAmount" Placeholder="Enter amount" Keyboard="Numeric" />
        <Entry x:Name=" DepositReason" Placeholder="give reason" />
        <Button Text="deposit"  Clicked="Button_Clicked"/>

        <Entry x:Name="WithdrawAmount" Placeholder="enter amount" Keyboard="Numeric"/>
        <Entry x:Name="WithdrawReason" Placeholder="give reason" />
        <Button Text="withdraw" Clicked="Button_Clicked_1" />
        <Button Text="history" Clicked="Button_Clicked_2" />


    </StackLayout>

</ContentPage>
